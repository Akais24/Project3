<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = '@color/sy_softpink'>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="382dp"
        android:layout_height="54dp"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="회원 정보 수정" />

    <EditText
        android:id="@+id/change_uinfo_name"
        android:layout_width="260dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView2"
        android:gravity="center"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/change_uinfo_nickname"
        android:layout_width="260dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/change_uinfo_name"
        android:gravity="center"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="70dp" />

    <EditText
        android:id="@+id/change_uinfo_account_info"
        android:layout_width="260dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/change_uinfo_nickname"
        android:gravity="center"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="124dp" />

    <Button
        android:id="@+id/submit_uinfo"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="236dp"
        android:background="@drawable/ic_check"
        android:paddingTop="12dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="90dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_alignTop="@+id/change_uinfo_name"
        android:text="이름\nName" />

    <TextView
        android:gravity="center"
        android:id="@+id/textView4"
        android:layout_width="90dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/change_uinfo_name"
        android:text="별명\n Nickname" />

    <TextView
        android:gravity="center"
        android:id="@+id/textView5"
        android:layout_width="90dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/change_uinfo_nickname"
        android:text="계좌정보\n account_info" />

    <Button
        android:id="@+id/backto_main"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/submit_uinfo"
        android:layout_marginEnd="98dp"
        android:background="@drawable/ic_back"
        android:paddingTop="12dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="165dp"
        android:text="Test" />

</RelativeLayout>