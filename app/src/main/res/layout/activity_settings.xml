<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/change_uinfo_name"
        android:layout_width="382dp"
        android:layout_height="54dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/change_uinfo_nickname"
        android:layout_width="382dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/change_uinfo_name"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="70dp" />

    <EditText
        android:id="@+id/change_uinfo_account_info"
        android:layout_width="382dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/change_uinfo_nickname"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="124dp" />

    <Button
        android:id="@+id/submit_uinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/change_uinfo_account_info"
        android:text="Submit"/>
</RelativeLayout>