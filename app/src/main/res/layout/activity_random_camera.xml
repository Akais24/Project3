<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Random.Random_Camera_Activity">

    <Button
        android:id="@+id/recog_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:background="@color/sy_softpink"

        android:text="얼굴 인식 시작!"
        android:gravity="center"
        android:textSize="@dimen/add_text_size"
        android:textColor="@color/sy_brown"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/img_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/explanation"/>

</RelativeLayout>