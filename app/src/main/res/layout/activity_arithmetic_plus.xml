<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:background="@color/sy_softpink">

    <TextView
        android:id="@+id/calc_explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="8dp"

        android:text="계산기"
        android:gravity="center"
        android:textSize="24dp"
        android:textColor="@color/sy_brown"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="8dp"
        android:paddingHorizontal="8dp"
        android:layout_below="@id/calc_explanation"

        android:text="0000"
        android:gravity="right|center_vertical"
        android:textSize="@dimen/add_text_size"
        android:textColor="@color/sy_brown"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/touchpad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/result"
        android:layout_margin="8dp">

        <RelativeLayout
            android:id="@+id/row0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_remove"
                android:layout_width="61dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="4dp"

                android:layout_marginEnd="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/border_with_transparent"
                android:gravity="center"
                android:text="del"
                android:textColor="@color/sy_brown"
                android:textSize="24dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:layout_toRightOf="@id/btn_remove"
                android:background="@drawable/border_with_transparent"

                android:gravity="center"
                android:text="C"
                android:textColor="@color/sy_brown"
                android:textSize="24dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_rest"
                android:layout_width="56dp"
                android:layout_height="60dp"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="4dp"

                android:layout_marginLeft="12dp"
                android:layout_marginRight="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/btn_reset"
                android:background="@drawable/border_with_transparent"
                android:gravity="center"
                android:text="%"
                android:textColor="@color/sy_brown"
                android:textSize="24dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_divide"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:layout_toRightOf="@id/btn_restt"
                android:background="@drawable/border_with_transparent"

                android:gravity="center"
                android:text="/"
                android:textColor="@color/sy_brown"
                android:textSize="24dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_below="@+id/row0">

        <Button
            android:id="@+id/btn_7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/border_with_transparent"
            android:layout_margin="4dp"

            android:text="7"
            android:gravity="center"
            android:textSize="24dp"
            android:textColor="@color/sy_brown"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/btn_7"
            android:background="@drawable/border_with_transparent"
            android:layout_margin="4dp"

            android:text="8"
            android:gravity="center"
            android:textSize="24dp"
            android:textColor="@color/sy_brown"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/btn_8"
            android:background="@drawable/border_with_transparent"
            android:layout_margin="4dp"

            android:text="9"
            android:gravity="center"
            android:textSize="24dp"
            android:textColor="@color/sy_brown"
            android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_multi"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:layout_toRightOf="@id/btn_restt"
                android:background="@drawable/border_with_transparent"

                android:gravity="center"
                android:text="X"
                android:textColor="@color/sy_brown"
                android:textSize="24dp"
                android:textStyle="bold" />
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/row1">

            <Button
                android:id="@+id/btn_4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/border_with_transparent"
                android:layout_margin="4dp"

                android:text="4"
                android:gravity="center"
                android:textSize="24dp"
                android:textColor="@color/sy_brown"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@id/btn_4"
                android:background="@drawable/border_with_transparent"
                android:layout_margin="4dp"

                android:text="5"
                android:gravity="center"
                android:textSize="24dp"
                android:textColor="@color/sy_brown"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@id/btn_5"
                android:background="@drawable/border_with_transparent"
                android:layout_margin="4dp"

                android:text="6"
                android:gravity="center"
                android:textSize="24dp"
                android:textColor="@color/sy_brown"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:layout_toRightOf="@id/btn_6"
                android:background="@drawable/border_with_transparent"

                android:gravity="center"
                android:text="+"
                android:textColor="@color/sy_brown"
                android:textSize="24dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/row2">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/border_with_transparent"
                android:layout_margin="4dp"

                android:text="1"
                android:gravity="center"
                android:textSize="24dp"
                android:textColor="@color/sy_brown"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@id/btn_1"
                android:background="@drawable/border_with_transparent"
                android:layout_margin="4dp"

                android:text="2"
                android:gravity="center"
                android:textSize="24dp"
                android:textColor="@color/sy_brown"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@id/btn_2"
                android:background="@drawable/border_with_transparent"
                android:layout_margin="4dp"

                android:text="3"
                android:gravity="center"
                android:textSize="24dp"
                android:textColor="@color/sy_brown"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:layout_toRightOf="@id/btn_3"
                android:background="@drawable/border_with_transparent"

                android:gravity="center"
                android:text="-"
                android:textColor="@color/sy_brown"
                android:textSize="24dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/row3">

            <Button
                android:id="@+id/btn_0"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/border_with_transparent"
                android:layout_margin="4dp"

                android:text="0"
                android:gravity="center"
                android:textSize="24dp"
                android:textColor="@color/sy_brown"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_00"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@id/btn_0"
                android:background="@drawable/border_with_transparent"
                android:layout_margin="4dp"

                android:text="00"
                android:gravity="center"
                android:textSize="24dp"
                android:textColor="@color/sy_brown"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_000"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@id/btn_00"
                android:background="@drawable/border_with_transparent"
                android:layout_margin="4dp"

                android:text="000"
                android:gravity="center"
                android:textSize="24dp"
                android:textColor="@color/sy_brown"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_enter"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:layout_toRightOf="@id/btn_000"
                android:background="@drawable/border_with_transparent"

                android:gravity="center"
                android:text="입력"
                android:textColor="@color/sy_brown"
                android:textSize="24dp"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>