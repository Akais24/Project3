<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.FloatingActionButton
                android:layout_alignParentRight="true"
                app:fabSize="mini"
                android:id="@+id/calc_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:borderWidth="0dp"
                android:backgroundTint="@color/sy_softpink"
                android:layout_margin="4dp"
                android:src="@drawable/calculator"/>

            <EditText
                android:id="@+id/money"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/calc_btn"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="16dp"

                android:inputType="number"
                android:textColor="@color/sy_brown"
                android:gravity="right"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/debtor_name"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/money"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="16dp"

                android:text="이름(닉네임)"
                android:gravity="center_vertical|left"
                android:textColor="@color/sy_brown"
                android:textSize="@dimen/more_info_text_size"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
