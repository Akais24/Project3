<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.SignUpActivity"
    android:background="@color/sy_softpink">

    <TextView
        android:id="@+id/explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginVertical="16dp"

        android:text="회원가입을 위해\n정보를 입력해주세요"
        android:textSize="24dp"
        android:lineSpacingMultiplier="1.5"
        android:gravity="center"
        android:textColor="@color/sy_brown"
        android:textStyle="bold"
        android:paddingVertical="4dp"
        android:layout_marginHorizontal="16dp"/>

    <RelativeLayout
        android:id="@+id/realname_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/explanation"
        android:layout_marginVertical="16dp">
        <TextView
            android:id="@+id/realname_text"
            android:layout_width="@dimen/signup_text"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"

            android:text="실명"
            android:textSize="20dp"
            android:lineSpacingMultiplier="1.5"
            android:gravity="center"
            android:textColor="@color/sy_brown"
            android:textStyle="bold"
            android:paddingVertical="4dp"
            android:layout_marginHorizontal="16dp"/>

        <EditText
            android:id="@+id/realname_space"
            android:layout_width="@dimen/signup_input"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/border_with_transparent_nontouch"

            android:textSize="20dp"
            android:lineSpacingMultiplier="1.5"
            android:gravity="center"
            android:textColor="@color/sy_brown"
            android:textStyle="bold"
            android:paddingVertical="4dp"
            android:paddingHorizontal="8dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nickname_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/realname_layout"
        android:layout_marginVertical="16dp">
        <TextView
            android:id="@+id/nickname_text"
            android:layout_width="@dimen/signup_text"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"

            android:text="닉네임"
            android:textSize="20dp"
            android:lineSpacingMultiplier="1.5"
            android:gravity="center"
            android:textColor="@color/sy_brown"
            android:textStyle="bold"
            android:paddingVertical="4dp"
            android:layout_marginHorizontal="16dp"/>

        <EditText
            android:id="@+id/nickname_space"
            android:layout_width="@dimen/signup_input"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/border_with_transparent_nontouch"

            android:textSize="20dp"
            android:lineSpacingMultiplier="1.5"
            android:gravity="center"
            android:textColor="@color/sy_brown"
            android:textStyle="bold"
            android:paddingVertical="4dp"
            android:paddingHorizontal="8dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/account_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nickname_layout"
        android:layout_marginVertical="16dp">
        <TextView
            android:id="@+id/account_text"
            android:layout_width="@dimen/signup_text"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"

            android:text="계좌 정보"
            android:textSize="16dp"
            android:lineSpacingMultiplier="1.5"
            android:gravity="center"
            android:textColor="@color/sy_brown"
            android:textStyle="bold"
            android:paddingVertical="4dp"
            android:layout_marginHorizontal="16dp"/>

        <EditText
            android:id="@+id/account_space"
            android:layout_width="@dimen/signup_input"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/border_with_transparent_nontouch"

            android:textSize="16dp"
            android:lineSpacingMultiplier="1.5"
            android:gravity="center"
            android:textColor="@color/sy_brown"
            android:textStyle="bold"
            android:paddingVertical="4dp"
            android:paddingHorizontal="8dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_layout"

        android:text="계좌번호는\n(우리 1002111222333) 형태로\n적어주시길 바랍니다"
        android:textSize="16dp"
        android:lineSpacingMultiplier="1.5"
        android:gravity="center"
        android:textColor="@color/sy_brown"
        android:textStyle="bold"
        android:paddingVertical="4dp"
        android:paddingHorizontal="8dp"
        />

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:layout_alignParentBottom="true"

        android:text="확인"
        android:textSize="24dp"
        android:lineSpacingMultiplier="1.5"
        android:gravity="center"
        android:textColor="@color/sy_softpink"
        android:textStyle="bold"
        android:background="@color/sy_brown"/>

</RelativeLayout>